@model WebAppPolyclinic.Models.CreateUserModel

@{
    ViewBag.Title = "Создание пользователя";
}

@section custom  {
    <script type="text/javascript" src="@Url.Content("/Scripts/App.js")"></script>
}

<h2>Create</h2>

@Html.ValidationSummary(false)
@using (Html.BeginForm())
{
    <div class="col-md-6">
        <div class="form-group">
            <label>Логин</label>
            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Пароль</label>
            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Имя</label>
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Фамилия</label>
            @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Отчество</label>
            @Html.TextBoxFor(x => x.Patronymic, new { @class = "form-control" })
        </div>
    </div><div class="col-md-6">
        <div class="form-group">
            <label>Номер телефона</label>
            @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Дата рождения</label>
            @Html.TextBoxFor(x => x.DateOfBirth, new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Email</label>
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-12 form-inline many-checkbox">
        <div class="form-group" id="doctor-toggle">
            @Html.CheckBoxFor(x => x.Doctor, new { @class = "form-check-input" })
            @Html.LabelFor(x => x.Doctor, "Доктор", new { @class = "form-check-label" })
        </div>
        <div class="form-group" id="patient-toggle">
            @Html.CheckBoxFor(x => x.Patient, new { @class = "form-check-input" })
            @Html.LabelFor(x => x.Patient, "Пациент", new { @class = "form-check-label" })
        </div>
        <div class="form-group">
            @Html.CheckBoxFor(x => x.Admin, new { @class = "form-check-input" })
            @Html.LabelFor(x => x.Admin, "Администратор", new { @class = "form-check-label"})
        </div>
    </div>
    <div class="clearfix"></div>
    <div id="doctor-fields" class="panel panel-default collapse">
        <div class="panel-heading">Атрибуты доктора</div>
        <div class="panel-body">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Специальность</label>
                    @Html.TextBoxFor(x => x.DoctorSpeciality, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div id="patient-fields" class="panel panel-default collapse">
        <div class="panel-heading">Атрибуты пациента</div>
        <div class="panel-body">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Полис</label>
                    @Html.TextBoxFor(x => x.PatientPolicy, new { @class = "form-control" })
                </div>
            </div><div class="col-md-6">
                <div class="form-group">
                    <label>Паспорт</label>
                    @Html.TextBoxFor(x => x.PatientPassport, new { @class = "form-control" })
                </div>
            </div><div class="col-md-6">
                <div class="form-group">
                    <label>Адрес</label>
                    @Html.TextBoxFor(x => x.PatientAddress, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="col-md-12">
        <button type="submit" class="btn btn-primary">Создать</button>

        @Html.ActionLink("Отмена", "Index", null, new { @class = "btn btn-default" })
    </div>
    
}
