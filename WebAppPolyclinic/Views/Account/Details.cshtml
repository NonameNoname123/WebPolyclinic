@model WebAppPolyclinic.Models.User

@{
    ViewBag.Title = Model.UserName;
    ViewBag.User = Model.UserName;
}

<h2>@Model.UserName</h2>

<div class="col-md-12">
    <div class="form-group">
        <label>Ваш уникальный идентификатор (сообщите его при обращении в техподдержку):</label>
        <p class="form-control-static">@Model.Id</p>
    </div>
</div>

<div class="col-md-6">
    <div class="form-group">
        <label>Логин</label>
        <p class="form-control-static">@Model.UserName</p>
    </div>
</div>
<div class="col-md-6">
    <div class="form-group">
        <label>Имя</label>
        <p class="form-control-static">@Model.Name</p>
    </div>
</div>
<div class="col-md-6">
    <div class="form-group">
        <label>Фамилия</label>
        <p class="form-control-static">@Model.Surname</p>
    </div>
</div>
<div class="col-md-6">
    <div class="form-group">
        <label>Отчество</label>
        <p class="form-control-static">@Model.Patronymic</p>
    </div>
</div>
<div class="col-md-6">
    <div class="form-group">
        <label>Номер телефона</label>
        <p class="form-control-static">@Model.PhoneNumber</p>
    </div>
</div>
<div class="col-md-6">
    <div class="form-group">
        <label>Дата рождения</label>
        <p class="form-control-static">@Model.DateOfBirth</p>
    </div>
</div>
<div class="col-md-6">
    <div class="form-group">
        <label>Email</label>
        <p class="form-control-static">@Model.Email</p>
    </div>
</div>

<div class="col-md-12">

    @if (@Model.AdminId != null)
    {
        <div id="doctor-fields" class="panel panel-default">
            <div class="panel-heading">
                <label>Вы являетесь администратором</label>
            </div>
            <div class="panel-body">
                @Html.ActionLink("Перейти на панель управления администратора", "Index", "Admin", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    }

    @if (@Model.DoctorId != null)
    {
        <div id="doctor-fields" class="panel panel-default">
            <div class="panel-heading">
                <label>Выявляетесь доктором</label>
            </div>
            <div class="panel-body">
                @Html.ActionLink("Перейти на список текущих приёмов", "Index", "Doctor", null, new { @class = "btn btn-primary" })
            </div>
            <div class="panel-body">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Специальность</label>
                        <p class="form-control-static">@Model.Doctor.Speciality</p>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (@Model.PatientId != null)
    {
        <div class="panel panel-default">
            <div class="panel-heading">
                <label>Вы являетесь пациентом</label>
            </div>
            <div class="panel-body">
                @Html.ActionLink("Посмотреть Ваши записи в медецинской карте", "Index", "MedCard", null, new { @class = "btn btn-primary" })
            </div>
            <div class="panel-body">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Полис</label>
                        <p class="form-control-static">@Model.Patient.Policy</p>
                    </div>
                </div><div class="col-md-6">
                    <div class="form-group">
                        <label>Паспорт</label>
                        <p class="form-control-static">@Model.Patient.Passport</p>
                    </div>
                </div><div class="col-md-6">
                    <div class="form-group">
                        <label>Адрес</label>
                        <p class="form-control-static">@Model.Patient.Address</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>



