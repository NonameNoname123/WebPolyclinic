@model WebAppPolyclinic.Models.AppCreateUserModel
@{
    ViewBag.Title = "CreateNewUser";
}


@section custom  {
    <script type="text/javascript" src="@Url.Content("/Scripts/App.js")"></script>
}

<h2>Create</h2>

@Html.ValidationSummary(false)
@using (Html.BeginForm())
{
    <input value="@Model.AppId" id="appId" name="appId" style="display:none"\>
    <div class="col-md-6">
        <div class="form-group">
            <label>Логин</label>
            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Пароль</label>
            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Имя</label>
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Фамилия</label>
            @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Отчество</label>
            @Html.TextBoxFor(x => x.Patronymic, new { @class = "form-control" })
        </div>
    </div><div class="col-md-6">
        <div class="form-group">
            <label>Номер телефона</label>
            @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Дата рождения</label>
            @Html.TextBoxFor(x => x.DateOfBirth, new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Email</label>
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-12">
        <button type="submit" class="btn btn-primary">Создать</button>

        @Html.ActionLink("Отмена", "Index", null, new { @class = "btn btn-default" })
    </div>

}
